---
interface Props {
  title?: string;
  description?: string;
}

const { title = "Utildesk", description = "Tools & Guides für AI, Automatisierung und Produktivität" } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>{title}</title>
    <style>
      .brand {
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .brand img {
        height: 18px;
        width: auto;
      }
      .footer-brand {
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .footer-brand img {
        height: 16px;
        width: auto;
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <nav class="nav">
          <a href="/" class="brand">
            <img src="/logo-grid.svg" alt="Utildesk" />
            Utildesk
          </a>
          <div class="nav-links">
            <a href="/tools/">Tools</a>
          </div>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <a href="/" class="footer-brand">
            <img src="/logo-grid.svg" alt="Utildesk" height="16" />
            Utildesk
          </a>
          <div class="footer-links">
            <a href="/tools/">Tools</a>
            <a href="/datenschutz/" rel="nofollow">Datenschutzerklärung</a>
            <a href="/impressum/" rel="nofollow">Impressum</a>
          </div>
        </div>
        <p class="footer-copy">&copy; {new Date().getFullYear()} Utildesk. Disclaimer: Utildesk is an independent tools directory. All trademarks, logos, and brand names are the property of their respective owners.</p>
      </div>
    </footer>
  </body>
</html>

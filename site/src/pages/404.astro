---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Seite nicht gefunden (404) — Utildesk"
  description="Die angeforderte Seite konnte leider nicht gefunden werden."
>
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>

  <div class="error-page">
    <div class="error-content">
      <div class="error-visual">
        <svg width="120" height="120" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <circle cx="60" cy="60" r="50" stroke="currentColor" stroke-width="2" fill="none" opacity="0.2"/>
          <path d="M40 50 Q45 45 50 50" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" fill="none"/>
          <path d="M70 50 Q75 45 80 50" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" fill="none"/>
          <path d="M45 75 Q60 65 75 75" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" fill="none"/>
          <circle cx="45" cy="52" r="3" fill="currentColor"/>
          <circle cx="75" cy="52" r="3" fill="currentColor"/>
        </svg>
      </div>

      <h1 class="error-title">Seite nicht gefunden</h1>
      <p class="error-code">404</p>
      <p class="error-message">
        Die angeforderte Seite existiert leider nicht oder wurde verschoben.
        Nutze die Navigation unten, um weiterzumachen.
      </p>

      <div class="error-actions">
        <a href="/" class="btn btn-primary">Zur Startseite</a>
        <a href="/tools/" class="btn btn-secondary">Zum Tool-Katalog</a>
        <button type="button" class="btn btn-secondary" onclick="if (typeof window !== 'undefined' && window.history && window.history.length > 1) { window.history.back(); } else { window.location.href = '/'; }">Zurück</button>
        <a id="report-link" href="mailto:support@utildesk.de?subject=404%20Fehler&body=Hallo" class="btn btn-secondary">Fehler melden</a>
      </div>

      <div class="error-search">
        <p class="search-hint">Tipp: Nutze die Suche im Tool-Katalog.</p>
        <a href="/tools/" class="btn btn-secondary">Zur Suche</a>
      </div>

      <div class="error-suggestions">
        <h2 class="suggestions-title">Schnellzugriff</h2>
        <div class="suggestions-grid">
          <a href="/" class="suggestion-card">
            <svg class="suggestion-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            <div class="suggestion-text">
              <span class="suggestion-label">Startseite</span>
              <span class="suggestion-desc">Zur Übersicht</span>
            </div>
          </a>
          <a href="/tools/" class="suggestion-card">
            <svg class="suggestion-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="7" height="7"></rect>
              <rect x="14" y="3" width="7" height="7"></rect>
              <rect x="14" y="14" width="7" height="7"></rect>
              <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
            <div class="suggestion-text">
              <span class="suggestion-label">Tool-Katalog</span>
              <span class="suggestion-desc">Alle Tools durchsuchen</span>
            </div>
          </a>
          <a href="/impressum" class="suggestion-card">
            <svg class="suggestion-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="16" x2="12" y2="12"></line>
              <line x1="12" y1="8" x2="12.01" y2="8"></line>
            </svg>
            <div class="suggestion-text">
              <span class="suggestion-label">Impressum</span>
              <span class="suggestion-desc">Rechtliche Hinweise</span>
            </div>
          </a>
          <a href="/datenschutz" class="suggestion-card">
            <svg class="suggestion-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            <div class="suggestion-text">
              <span class="suggestion-label">Datenschutz</span>
              <span class="suggestion-desc">Datenschutzerklärung</span>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Update report link with current URL
    if (typeof window !== "undefined") {
      const reportLink = document.getElementById("report-link");
      if (reportLink) {
        const currentUrl = window.location.href;
        const subject = encodeURIComponent("404 – Seite nicht gefunden");
        const body = encodeURIComponent(
          "Hallo Utildesk-Team,\n\n" +
          "Ich habe einen kaputten Link gefunden:\n" +
          currentUrl + "\n\n" +
          "Vielen Dank!"
        );
        reportLink.href = `mailto:support@utildesk.de?subject=${subject}&body=${body}`;
      }
    }
  </script>

  <style>
    .error-page {
      min-height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px 0;
    }

    .error-content {
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
    }

    .error-visual {
      margin-bottom: 32px;
      color: var(--accent);
      display: flex;
      justify-content: center;
    }

    .error-visual svg {
      width: 120px;
      height: 120px;
    }

    .error-title {
      font-size: clamp(1.75rem, 4vw, 2.25rem);
      font-weight: 600;
      letter-spacing: -0.02em;
      margin-bottom: 12px;
      color: var(--text);
    }

    .error-code {
      font-size: 1rem;
      font-weight: 500;
      color: var(--text-muted);
      margin-bottom: 20px;
      font-family: var(--font-mono);
    }

    .error-message {
      font-size: 1.0625rem;
      line-height: 1.65;
      color: var(--text-muted);
      margin-bottom: 32px;
      max-width: 480px;
      margin-left: auto;
      margin-right: auto;
    }

    .error-actions {
      display: flex;
      gap: 12px;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 48px;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 12px 24px;
      border-radius: var(--radius);
      font-weight: 500;
      font-size: 0.9375rem;
      transition: all 0.2s ease;
      border: 1px solid transparent;
      text-decoration: none;
      cursor: pointer;
    }

    .btn-primary {
      background: var(--accent);
      color: white;
      border-color: var(--accent);
    }

    .btn-primary:hover {
      opacity: 0.85;
    }

    .btn-secondary {
      background: var(--surface);
      color: var(--text);
      border-color: var(--border);
    }

    .btn-secondary:hover {
      border-color: var(--accent);
      opacity: 1;
    }

    .error-search {
      margin-bottom: 48px;
      padding: 20px;
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      text-align: center;
    }

    .search-hint {
      font-size: 0.9375rem;
      color: var(--text-muted);
      line-height: 1.5;
      margin-bottom: 12px;
    }

    .error-suggestions {
      margin-top: 40px;
    }

    .suggestions-title {
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 20px;
      color: var(--text);
    }

    .suggestions-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
      max-width: 560px;
      margin: 0 auto;
    }

    .suggestion-card {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px;
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      text-decoration: none;
      transition: border-color 0.2s ease;
      text-align: left;
    }

    .suggestion-card:hover {
      border-color: var(--accent);
      opacity: 1;
    }

    .suggestion-icon {
      flex-shrink: 0;
      color: var(--accent);
      width: 24px;
      height: 24px;
    }

    .suggestion-text {
      display: flex;
      flex-direction: column;
      gap: 2px;
    }

    .suggestion-label {
      font-size: 0.9375rem;
      font-weight: 500;
      color: var(--text);
      line-height: 1.3;
    }

    .suggestion-desc {
      font-size: 0.8125rem;
      color: var(--text-muted);
      line-height: 1.3;
    }

    @media (max-width: 640px) {
      .error-page {
        padding: 40px 0;
      }

      .error-actions {
        flex-direction: column;
        width: 100%;
      }

      .btn {
        width: 100%;
      }

      .suggestions-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>

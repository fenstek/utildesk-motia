---
export interface Props {
  slug: string;
  title: string;
  category?: string;
  description?: string;
  priceModel?: string;
}

const { slug, title, category, description, priceModel } = Astro.props;
---

<a href={`/tools/${slug}/`} class="tool-card">
  <div class="tool-card__icon">
    <!-- Universal placeholder SVG icon -->
    <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
      <rect width="40" height="40" rx="10" fill="currentColor" opacity="0.1"/>
      <path d="M20 12L28 20L20 28L12 20L20 12Z" fill="currentColor" opacity="0.6"/>
    </svg>
  </div>

  <div class="tool-card__content">
    <h3 class="tool-card__title">{title}</h3>
    {description && <p class="tool-card__description">{description}</p>}

    <div class="tool-card__meta">
      {category && (
        <span class="chip chip--category">{category}</span>
      )}
      {priceModel && (
        <span class="chip chip--price">{priceModel}</span>
      )}
    </div>
  </div>
</a>

<style>
  .tool-card {
    display: block;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    padding: var(--space-md);
    transition: all 0.25s ease;
    text-decoration: none;
    color: inherit;
  }

  .tool-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
    border-color: var(--accent);
  }

  .tool-card__icon {
    color: var(--accent);
    margin-bottom: var(--space-sm);
  }

  .tool-card__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .tool-card__title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text);
    margin: 0;
  }

  .tool-card__description {
    font-size: 0.9rem;
    line-height: 1.5;
    color: var(--text-muted);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tool-card__meta {
    display: flex;
    gap: var(--space-xs);
    margin-top: var(--space-xs);
    flex-wrap: wrap;
  }

  .chip {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .chip--category {
    background: rgba(91, 134, 229, 0.1);
    color: var(--accent);
  }

  .chip--price {
    background: rgba(45, 45, 45, 0.06);
    color: var(--text-muted);
  }
</style>
